<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="6dp"
    android:background="@drawable/border"
    >

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/btn_create_plyr"
        style="@style/AddStatkeeperFABStyle"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:fabCustomSize="24dp"
        android:clickable="false"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textview_players_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/playerStatKeeper"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textview_players_description"
        app:layout_constraintStart_toEndOf="@+id/btn_create_plyr"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textview_players_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:maxLines="1"
        android:text="@string/player_statkeeper_desc"
        android:textSize="12sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/textview_players_title"
        app:layout_constraintTop_toBottomOf="@+id/textview_players_title" />

</android.support.constraint.ConstraintLayout>