<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/infield"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/sand"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="0dp"
        android:scaleType="fitCenter"
        />

    <TextView
        android:id="@+id/home_display"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_above="@id/infield"

        android:autoSizeMinTextSize="10sp"
        android:autoSizeTextType="uniform"
        android:background="@drawable/homeplate"
        app:layout_constraintBottom_toBottomOf="@+id/infield"
        app:layout_constraintLeft_toLeftOf="@+id/infield"
        app:layout_constraintRight_toRightOf="@+id/infield"
        android:scaleType="centerInside"
        />

    <TextView
        android:id="@+id/first_display"
        style="@style/BaseStyle"
        app:layout_constraintRight_toRightOf="@+id/infield"
        app:layout_constraintTop_toTopOf="@+id/second_display"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="0dp" />

    <TextView
        android:id="@+id/second_display"
        style="@style/BaseStyle"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="@+id/infield"
        app:layout_constraintRight_toRightOf="@+id/first_display"
        app:layout_constraintTop_toTopOf="@+id/infield" />

    <TextView
        android:id="@+id/third_display"
        style="@style/BaseStyle"
        app:layout_constraintLeft_toLeftOf="@+id/infield"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ImageView
        android:id="@+id/batter"
        android:layout_width="57dp"
        android:layout_height="50dp"

        app:layout_constraintBottom_toTopOf="@+id/home_display"
        app:layout_constraintLeft_toLeftOf="@+id/infield"
        app:layout_constraintRight_toRightOf="@+id/infield"
        app:layout_constraintTop_toBottomOf="@+id/second_display"
        app:layout_constraintVertical_bias="0.50"
        app:srcCompat="@drawable/batter"
        android:scaleType="centerInside"
        />

    <ImageView
        android:id="@+id/trash"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/home_display"
        app:layout_constraintTop_toBottomOf="@+id/first_display"
        app:srcCompat="@drawable/trash" />

    <TextView
        android:id="@+id/outText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Out"
        android:textColor="#ffffff"
        app:layout_constraintBottom_toBottomOf="@+id/trash"
        app:layout_constraintLeft_toLeftOf="@+id/trash"
        app:layout_constraintRight_toRightOf="@+id/trash" />

</android.support.constraint.ConstraintLayout>