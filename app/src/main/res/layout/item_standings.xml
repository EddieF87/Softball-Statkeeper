<?xml version="1.0" encoding="utf-8"?>
<!-- Layout for a single list item in the list of pets -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    android:paddingLeft="8dp"
    android:paddingRight="8dp">

    <TextView
        android:id="@+id/name"
        android:layout_width="0dp"
        android:layout_weight="100"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:maxLines="1"
        android:textAlignment="viewStart"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_goneMarginEnd="8dp"
        app:layout_goneMarginRight="8dp"
        tools:text="GoonNation"
        android:autoSizeMinTextSize="12sp"
        android:autoSizeTextType="uniform"
        tools:targetApi="o" />

    <TextView
        android:id="@+id/win"
        style="@style/StandingsStyle"
        tools:text="7" />

    <TextView
        android:id="@+id/loss"
        style="@style/StandingsStyle"
        tools:text="2" />

    <TextView
        android:id="@+id/tie"
        style="@style/StandingsStyle"
        tools:text="0" />

    <TextView
        android:id="@+id/winpct"
        style="@style/StandingsStyle"
        android:layout_weight="50"
        tools:text="1.555" />

    <TextView
        android:id="@+id/runsfor"
        style="@style/StandingsStyle"
        android:layout_weight="36"
        tools:text="444" />

    <TextView
        android:id="@+id/runsagainst"
        style="@style/StandingsStyle"
        android:layout_weight="36"
        tools:text="144" />

    <TextView
        android:id="@+id/rundiff"
        style="@style/StandingsStyle"
        android:layout_weight="36"
        tools:text="300" />
</LinearLayout>