<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:autoSizeMinTextSize="12sp"
        android:autoSizeTextType="uniform"
        android:gravity="center"
        android:text="@string/Innings"
        android:textSize="14sp"
        android:textStyle="bold"
        tools:targetApi="o" />

    <TextView
        android:id="@+id/innings_textview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="2dp"
        android:layout_weight="1"
        android:autoSizeMinTextSize="12sp"
        android:autoSizeTextType="uniform"
        android:gravity="center"
        android:textSize="12sp"
        tools:targetApi="o" />

    <SeekBar
        android:id="@+id/innings_seekbar"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:max="8"
        android:progress="1" />

    <TextView
        android:id="@+id/gender_sort_title"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_weight="1"
        android:autoSizeMinTextSize="12sp"
        android:autoSizeTextType="uniform"
        android:gravity="center"
        android:text="@string/set_gender_lineup"
        android:textSize="14sp"
        android:textStyle="bold"
        tools:targetApi="o" />

    <TextView
        android:id="@+id/gender_sort_textview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="2dp"
        android:layout_weight="1"
        android:autoSizeMinTextSize="12sp"
        android:autoSizeTextType="uniform"
        android:gravity="center"
        android:textColor="@color/male"
        android:textSize="12sp"
        tools:targetApi="o" />

    <SeekBar
        android:id="@+id/gender_sort_seekbar"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:max="4"
        android:progress="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="4dp">

        <TextView
            android:id="@+id/help_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="3"
            android:gravity="center"
            android:text="@string/in_game_help_"
            android:textSize="18sp" />

        <ToggleButton
            android:id="@+id/toggle_help"
            style="@style/RadioButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:checked="true"
            android:paddingBottom="0dp"
            android:paddingTop="0dp"
            android:textOff="@string/OFF"
            android:textOn="@string/ON"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>