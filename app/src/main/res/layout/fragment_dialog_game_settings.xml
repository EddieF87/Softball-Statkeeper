<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/innings_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="@string/Innings"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/innings_textview"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="16dp" />

    <TextView
        android:id="@+id/innings_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/innings_seekbar"
        app:layout_constraintTop_toBottomOf="@+id/innings_description"
        tools:layout_editor_absoluteX="16dp" />

    <SeekBar
        android:id="@+id/innings_seekbar"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:max="8"
        android:progress="1"
        app:layout_constraintBottom_toTopOf="@+id/gender_sort_description"
        app:layout_constraintTop_toBottomOf="@+id/innings_textview"
        tools:layout_editor_absoluteX="16dp" />

    <TextView
        android:id="@+id/gender_sort_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:text="@string/set_gender_lineup"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/gender_sort_textview"
        app:layout_constraintTop_toBottomOf="@+id/innings_seekbar"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/gender_sort_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:textColor="@color/male"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/gender_sort_seekbar"
        app:layout_constraintTop_toBottomOf="@+id/gender_sort_description"
        tools:layout_editor_absoluteX="16dp" />

    <SeekBar
        android:id="@+id/gender_sort_seekbar"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:max="4"
        android:progress="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gender_sort_textview"
        tools:layout_editor_absoluteX="0dp" />

</android.support.constraint.ConstraintLayout>
