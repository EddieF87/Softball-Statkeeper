<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.scorekeepdraft1.activities.PlayerManagerActivity">

    <TextView
        android:id="@+id/player_hr_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/hr"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="@+id/player_avg_title"
        app:layout_constraintTop_toBottomOf="@+id/player_avg" />

    <TextView
        android:id="@+id/player_runs_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:text="@string/r"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="@+id/player_slg_title"
        app:layout_constraintTop_toBottomOf="@+id/player_slg" />

    <TextView
        android:id="@+id/player_rbi_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:text="@string/rbi"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="@+id/player_ops_title"
        app:layout_constraintTop_toBottomOf="@+id/player_ops" />

    <TextView
        android:id="@+id/player_rbi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@+id/player_rbi_title"
        app:layout_constraintTop_toBottomOf="@+id/player_rbi_title" />

    <TextView
        android:id="@+id/player_runs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@+id/player_runs_title"
        app:layout_constraintTop_toBottomOf="@+id/player_runs_title" />

    <TextView
        android:id="@+id/player_ops_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ops"
        android:textSize="18sp"
        app:layout_constraintLeft_toRightOf="@+id/player_slg_title"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/player_slg_title" />

    <TextView
        android:id="@+id/player_ops"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/empty_avg"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/player_ops_title"
        app:layout_constraintLeft_toLeftOf="@+id/player_ops_title"
        app:layout_constraintTop_toBottomOf="@+id/player_ops_title" />

    <TextView
        android:id="@+id/player_hr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@+id/player_hr_title"
        app:layout_constraintTop_toBottomOf="@+id/player_hr_title" />

    <TextView
        android:id="@+id/player_slg_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/slg"
        android:textSize="18sp"
        app:layout_constraintLeft_toRightOf="@+id/player_avg_title"
        app:layout_constraintRight_toLeftOf="@+id/player_ops_title"
        app:layout_constraintTop_toTopOf="@+id/player_avg_title" />

    <TextView
        android:id="@+id/player_slg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/empty_avg"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/player_slg_title"
        app:layout_constraintLeft_toLeftOf="@+id/player_slg_title"
        app:layout_constraintTop_toBottomOf="@+id/player_slg_title" />

    <TextView
        android:id="@+id/player_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:maxLines="1"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/player_image"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Player  Nmae" />

    <TextView
        android:id="@+id/player_team"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="8dp"
        android:maxLines="1"
        android:text="Playertopes"
        android:textSize="24sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/player_jersey"
        app:layout_constraintTop_toTopOf="@+id/player_jersey" />

    <TextView
        android:id="@+id/player_jersey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="#24"
        android:textSize="24sp"
        android:textStyle="italic"
        app:layout_constraintLeft_toLeftOf="@+id/player_name"
        app:layout_constraintTop_toBottomOf="@+id/player_name" />

    <TextView
        android:id="@+id/player_avg_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/avg"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/player_slg_title"
        app:layout_constraintTop_toBottomOf="@+id/player_image" />

    <TextView
        android:id="@+id/player_avg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/empty_avg"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/player_avg_title"
        app:layout_constraintLeft_toLeftOf="@+id/player_avg_title"
        app:layout_constraintTop_toBottomOf="@+id/player_avg_title" />

    <ImageView
        android:id="@+id/player_image"
        android:layout_width="92dp"
        android:layout_height="113dp"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher_round" />


    <TextView
        android:id="@+id/playerboard_hit_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:gravity="center"
        android:text="@string/h"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="14dp"
        app:layout_constraintTop_toBottomOf="@+id/player_hr"
        app:layout_constraintRight_toLeftOf="@+id/playerboard_1b_title" />

    <!--        <TextView
                android:id="@+id/playerboard_run_title"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center"
                android:text="@string/r" />

            <TextView
                android:id="@+id/playerboard_rbi_title"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center"
                android:text="@string/rbi" />-->

    <TextView
        android:id="@+id/playerboard_1b_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:gravity="center"
        android:text="@string/_1b"
        app:layout_constraintLeft_toRightOf="@+id/playerboard_hit_title"
        app:layout_constraintTop_toTopOf="@+id/playerboard_hit_title"
        app:layout_constraintRight_toLeftOf="@+id/playerboard_2b_title" />

    <TextView
        android:id="@+id/playerboard_2b_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:gravity="center"
        android:text="@string/_2b"
        app:layout_constraintLeft_toRightOf="@+id/playerboard_1b_title"
        app:layout_constraintTop_toTopOf="@+id/playerboard_1b_title"
        app:layout_constraintRight_toLeftOf="@+id/playerboard_3b_title" />

    <TextView
        android:id="@+id/playerboard_3b_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:gravity="center"
        android:text="@string/_3b"
        app:layout_constraintTop_toTopOf="@+id/playerboard_2b_title"
        app:layout_constraintLeft_toRightOf="@+id/playerboard_2b_title"
        app:layout_constraintRight_toLeftOf="@+id/playerboard_bb_title" />

    <!--        <TextView
                android:id="@+id/playerboard_hr_title"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center"
                android:text="@string/hr" />-->

    <TextView
        android:id="@+id/playerboard_bb_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:gravity="center"
        android:text="@string/bb"
        app:layout_constraintTop_toTopOf="@+id/playerboard_3b_title"
        app:layout_constraintLeft_toRightOf="@+id/playerboard_3b_title"
        app:layout_constraintRight_toLeftOf="@+id/playerboard_obp_title" />

    <TextView
        android:id="@+id/playerboard_obp_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:gravity="center"
        android:text="@string/obp"
        app:layout_constraintLeft_toRightOf="@+id/playerboard_bb_title"
        app:layout_constraintTop_toTopOf="@+id/playerboard_bb_title"
        app:layout_constraintRight_toRightOf="parent" />

    <!--        <TextView
                android:id="@+id/playerboard_slg_title"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:gravity="center"
                android:text="@string/slg" />

            <TextView
                android:id="@+id/playerboard_ops_title"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:gravity="center"
                android:text="@string/ops" />-->


    <TextView
        android:id="@+id/playerboard_hit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_weight="3"
        android:gravity="center"
        android:text="0"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/playerboard_hit_title"
        app:layout_constraintLeft_toLeftOf="@+id/playerboard_hit_title"
        app:layout_constraintTop_toBottomOf="@+id/playerboard_hit_title" />

    <TextView
        android:id="@+id/playerboard_1b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_weight="3"
        android:gravity="center"
        android:text="0"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/playerboard_1b_title"
        app:layout_constraintLeft_toLeftOf="@+id/playerboard_1b_title"
        app:layout_constraintTop_toBottomOf="@+id/playerboard_1b_title" />

    <TextView
        android:id="@+id/playerboard_2b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_weight="3"
        android:gravity="center"
        android:text="0"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/playerboard_2b_title"
        app:layout_constraintLeft_toLeftOf="@+id/playerboard_2b_title"
        app:layout_constraintTop_toBottomOf="@+id/playerboard_2b_title"
        tools:text="999" />

    <TextView
        android:id="@+id/playerboard_3b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_weight="3"
        android:gravity="center"
        android:text="0"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/playerboard_3b_title"
        app:layout_constraintLeft_toLeftOf="@+id/playerboard_3b_title"
        app:layout_constraintTop_toBottomOf="@+id/playerboard_3b_title"
        tools:text="999" />

    <TextView
        android:id="@+id/playerboard_bb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_weight="3"
        android:gravity="center"
        android:text="0"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/playerboard_bb_title"
        app:layout_constraintLeft_toLeftOf="@+id/playerboard_bb_title"
        app:layout_constraintTop_toBottomOf="@+id/playerboard_bb_title"
        tools:text="999" />

    <TextView
        android:id="@+id/playerboard_obp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_weight="4"
        android:gravity="center"
        android:text="@string/empty_avg"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/playerboard_obp_title"
        app:layout_constraintLeft_toLeftOf="@+id/playerboard_obp_title"
        app:layout_constraintTop_toBottomOf="@+id/playerboard_obp_title" />

    <!--        <TextView
                android:id="@+id/playerboard_slg"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:gravity="center"
                android:text=".555" />

            <TextView
                android:id="@+id/playerboard_ops"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:gravity="center"
                android:text=".888" />-->

    <FrameLayout
        android:id="@+id/border4"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/playerboard_3b" />

    <FrameLayout
        android:id="@+id/border1"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginBottom="8dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintBottom_toTopOf="@+id/player_slg_title"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <FrameLayout
        android:id="@+id/border3"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/player_runs"
        android:layout_marginBottom="0dp"
        app:layout_constraintBottom_toTopOf="@+id/playerboard_2b_title" />

    <FrameLayout
        android:id="@+id/border2"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintBottom_toTopOf="@+id/player_runs_title"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/player_slg" />

    <include
        android:id="@+id/player_mgr"
        layout="@layout/item_player_manager"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/border4"
        android:visibility="gone"
        />

</android.support.constraint.ConstraintLayout>
