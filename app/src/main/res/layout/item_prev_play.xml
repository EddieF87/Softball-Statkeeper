<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="8dp">

    <TextView
        android:id="@+id/new_inning_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@drawable/bg_white"
        android:gravity="center"
        android:padding="12dp"
        android:textSize="24sp"
        android:textStyle="bold"
        android:visibility="gone"
        android:elevation="4dp"
        tools:text="ffffffffffffffffff"
        tools:visibility="visible" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="8dp"
        card_view:cardElevation="2dp"
        card_view:cardPreventCornerOverlap="true"
        card_view:cardUseCompatPadding="true"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <TextView
                android:id="@+id/prev_play_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="8dp"
                android:layout_toStartOf="@id/prev_1b"
                tools:text="ffffffffffffffffff" />

            <TextView
                android:id="@+id/prev_runs_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@id/prev_play_text"
                android:layout_below="@id/prev_play_text"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="8dp"
                android:visibility="gone"
                android:layout_toStartOf="@id/prev_1b"
                tools:text="ffffffffffffffffff"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/prev_1b"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_toStartOf="@id/prev_score"
                android:singleLine="true"
                android:textSize="10sp"
                tools:text="ffff" />

            <TextView
                android:id="@+id/prev_2b"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:singleLine="true"
                android:layout_marginEnd="8dp"
                android:layout_below="@id/prev_1b"
                android:layout_toStartOf="@id/prev_score"
                tools:text="ffffffff"
                />

            <TextView
                android:id="@+id/prev_3b"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:singleLine="true"
                android:layout_marginEnd="8dp"
                android:layout_below="@id/prev_2b"
                android:layout_toStartOf="@id/prev_score"
                tools:text="ffffffff"
                />

            <TextView
                android:id="@+id/prev_score"
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:gravity="center"
                android:maxLines="1"
                android:textStyle="bold"
                tools:text="24 - 88" />

            <TextView
                android:id="@+id/prev_outs"
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/prev_score"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:maxLines="1"
                android:singleLine="true"
                android:textSize="10sp"

                tools:text="3 outs" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>