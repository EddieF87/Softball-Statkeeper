<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >

    <TextView
        android:id="@+id/bs_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:gravity="start|center_vertical"
        android:layout_gravity="center_vertical"
        android:maxLines="1"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:textAlignment="textStart"
        android:textSize="14sp"
        android:textStyle="bold"
        android:autoSizeTextType="uniform"
        android:autoSizeMinTextSize="10sp"
        tools:text="Wiener Sniener"
        tools:targetApi="o" />

    <TextView
        android:id="@+id/bs_ab"
        style="@style/BoxScoreStyle"
        tools:text="@string/ab" />

    <TextView
        android:id="@+id/bs_run"
        style="@style/BoxScoreStyle"
        tools:text="@string/r" />

    <TextView
        android:id="@+id/bs_hit"
        style="@style/BoxScoreStyle"
        tools:text="@string/h" />

    <TextView
        android:id="@+id/bs_rbi"
        style="@style/BoxScoreStyle"
        tools:text="@string/rbi" />

    <TextView
        android:id="@+id/bs_hr"
        style="@style/BoxScoreStyle"
        tools:text="@string/hr" />

    <TextView
        android:id="@+id/bs_tpl"
        style="@style/BoxScoreStyle"
        tools:text="@string/_3b" />

    <TextView
        android:id="@+id/bs_dbl"
        style="@style/BoxScoreStyle"
        tools:text="@string/_2b" />

    <TextView
        android:id="@+id/bs_sgl"
        style="@style/BoxScoreStyle"
        tools:text="@string/_1b" />

    <TextView
        android:id="@+id/bs_bb"
        style="@style/BoxScoreStyle"
        tools:text="@string/bb" />

    <TextView
        android:id="@+id/bs_sb"
        style="@style/BoxScoreStyle"
        tools:text="@string/sb" />

    <TextView
        android:id="@+id/bs_out"
        style="@style/BoxScoreStyle"
        tools:text="@string/out" />

</LinearLayout>