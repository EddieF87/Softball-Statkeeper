<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="xyz.sleekstats.softball.activities.MainActivity"
    tools:layout_editor_absoluteY="73dp">


    <TextView
        android:id="@+id/welcome_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:autoSizeMinTextSize="18sp"
        android:autoSizeTextType="uniform"
        android:background="@drawable/border"
        android:gravity="center"
        android:maxLines="1"
        android:text="@string/welcome_to_statkeeper"
        android:textColor="@color/colorPrimary"
        android:textSize="36sp"
        android:textStyle="bold|italic"
        android:fontFamily="sans-serif-smallcaps"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:targetApi="o" />

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHorizontal_weight="1"
        android:layout_marginEnd="16dp"
        android:background="@color/colorPrimaryLight"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/team_sk_card"
        app:layout_constraintStart_toStartOf="@+id/current_statkeepers_title"
        app:layout_constraintTop_toBottomOf="@+id/current_statkeepers_title"
        android:layout_marginRight="16dp">

        <TextView
            android:id="@+id/error_rv_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/error_with_loading"
            android:visibility="gone" />

        <ProgressBar
            android:id="@+id/progressBarMain"
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="32dp"
            android:gravity="center"
            android:visibility="gone" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />
    </FrameLayout>

    <TextView
        android:id="@+id/current_statkeepers_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:background="@color/colorPrimary"
        android:maxLines="1"
        android:padding="8dp"
        android:gravity="center"
        android:text="@string/my_statkeepers"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="#ffffff"
        android:textSize="24sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toStartOf="@+id/textview_join_or_create"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/welcome_title"
        android:layout_marginRight="8dp" />

    <TextView
        android:id="@+id/textview_join_or_create"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:autoSizeMinTextSize="16sp"
        android:autoSizeTextType="uniform"
        android:background="@color/colorPrimary"
        android:drawableLeft="@drawable/ic_reorder_white_500_24dp"
        android:drawableStart="@drawable/ic_reorder_white_500_24dp"
        android:maxLines="1"
        android:padding="8dp"
        android:gravity="center"
        android:text="@string/create_a_new_statkeeper"
        android:textColor="#ffffff"
        android:textSize="24sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="@+id/current_statkeepers_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/current_statkeepers_title"
        app:layout_constraintTop_toTopOf="@+id/current_statkeepers_title"
        android:layout_marginLeft="8dp"
        tools:targetApi="o" />

    <include
        android:id="@+id/player_sk_card"
        layout="@layout/item_create_player_sk_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/team_sk_card"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/textview_join_or_create"
        app:layout_constraintTop_toBottomOf="@+id/textview_join_or_create"
        tools:visibility="visible" />

    <include
        android:id="@+id/team_sk_card"
        layout="@layout/item_create_team_sk_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/lg_sk_card"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/player_sk_card"
        app:layout_constraintTop_toBottomOf="@+id/player_sk_card"
        tools:visibility="visible" />

    <include
        android:id="@+id/lg_sk_card"
        layout="@layout/item_create_league_sk_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/team_sk_card"
        app:layout_constraintTop_toBottomOf="@+id/team_sk_card"
        tools:visibility="visible" />

</android.support.constraint.ConstraintLayout>
