<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="680dp"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:baselineAligned="false">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/innings_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:text="@string/Innings"
            android:textSize="14sp"
            android:textStyle="bold"
            tools:targetApi="o" />


        <SeekBar
            android:id="@+id/innings_seekbar"
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:max="8"
            android:progress="1" />

        <TextView
            android:id="@+id/gender_sort_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="12dp"
            android:gravity="start"
            android:text="@string/set_gender_lineup"
            android:textSize="14sp"
            android:textStyle="bold"
            tools:targetApi="o" />

        <SeekBar
            android:id="@+id/gender_sort_seekbar"
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:max="4"
            android:progress="1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="8dp"
        android:gravity="center"
        android:layout_gravity="center"
        >

        <ToggleButton
            android:id="@+id/toggle_help"
            style="@style/RadioButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:checked="true"
            android:paddingBottom="0dp"
            android:paddingTop="0dp"
            android:textOff="@string/help_OFF"
            android:textOn="@string/help_ON"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/mercy_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="start"
            android:text="@string/mercy_rule"
            android:textSize="14sp"
            android:textStyle="bold"
            tools:targetApi="o" />

        <SeekBar
            android:id="@+id/mercy_seekbar"
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:max="11"
            android:progress="1" />

    </LinearLayout>

</LinearLayout>