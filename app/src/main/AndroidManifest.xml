<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.scorekeepdraft1">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/baseballtest"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/baseballtest"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".LeagueActivity"
            android:parentActivityName=".MainActivity"
            android:launchMode="singleTask">
        </activity>
        <activity
            android:name=".GameActivity"
            android:parentActivityName=".LeagueActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".StandingsActivity"
            android:label="STANDINGS"
            android:parentActivityName=".LeagueActivity" />
        <activity
            android:name=".StatsActivity"
            android:label="PLAYER STATS"
            android:parentActivityName=".LeagueActivity" />
        <activity
            android:name=".SetLineupActivity"
            android:label="Lineup Editor"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MatchupActivity"
            android:label="Matchup Selector"
            android:parentActivityName=".LeagueActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".PlayerPageActivity"
            android:parentActivityName=".StatsActivity" />
        <activity android:name=".TeamPageActivity" />
        <activity
            android:name=".BoxScoreActivity"
            android:label="Box Score"
            android:parentActivityName=".GameActivity"
            android:screenOrientation="portrait" />

        <provider
            android:name=".data.StatsProvider"
            android:authorities="com.example.android.scorekeepdraft1"
            android:exported="false" />
    </application>

</manifest>