<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="xyz.sleekstats.softball">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- To auto-complete the email text field in the login form with statKeepUseruser's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.WRITE_CONTACTS" />

    <application
        android:name="xyz.sleekstats.softball.MyApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_statkeep"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_statkeep_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:windowSoftInputMode="stateHidden|adjustResize"
        android:fullBackupContent="@xml/backup_descriptor">

        <meta-data
            android:name="asset_statements"
            android:resource="@string/asset_statements" />

        <activity
            android:name="xyz.sleekstats.softball.activities.MainActivity"
            android:theme="@style/AppTheme"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <intent-filter android:autoVerify="true">
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data android:scheme="https" android:host="sleekstats.xyz" />
                <data android:path="/league" />
                <data android:path="/team" />
            </intent-filter>
        </activity>

        <activity
            android:name="xyz.sleekstats.softball.activities.LeagueManagerActivity"
            android:launchMode="singleTask"
            android:parentActivityName="xyz.sleekstats.softball.activities.MainActivity">
        </activity>

        <activity
            android:name="xyz.sleekstats.softball.activities.LeagueGameActivity"
            android:launchMode="singleTask"
            android:parentActivityName="xyz.sleekstats.softball.activities.LeagueManagerActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name="xyz.sleekstats.softball.activities.SetLineupActivity"
            android:label="Lineup Editor"
            android:screenOrientation="portrait"
            android:launchMode="singleTask" />

        <activity
            android:name="xyz.sleekstats.softball.activities.BoxScoreActivity"
            android:label="Box Score" />

        <activity
            android:name="xyz.sleekstats.softball.activities.TeamGameActivity"
            android:launchMode="singleTask"
            android:parentActivityName="xyz.sleekstats.softball.activities.TeamManagerActivity"
            android:screenOrientation="portrait" />

        <activity android:name="xyz.sleekstats.softball.activities.TeamPagerActivity" />

        <activity android:name="xyz.sleekstats.softball.activities.PlayerPagerActivity" />

        <activity
            android:name="xyz.sleekstats.softball.activities.TeamManagerActivity"
            android:launchMode="singleTask"
            android:parentActivityName="xyz.sleekstats.softball.activities.MainActivity">
        </activity>

        <activity android:name="xyz.sleekstats.softball.activities.PlayerManagerActivity" />

        <activity
            android:name="xyz.sleekstats.softball.activities.UsersActivity"
            android:screenOrientation="portrait" />

        <provider
            android:name="xyz.sleekstats.softball.data.StatsProvider"
            android:authorities="xyz.sleekstats.softball"
            android:exported="false" />

        <provider
            android:name="xyz.sleekstats.softball.data.MyFileProvider"
            android:authorities="xyz.sleekstats.softball.data.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/provider_paths" />
        </provider>

        <activity
            android:name="xyz.sleekstats.softball.activities.LoadingActivity"
            android:screenOrientation="portrait" />

    </application>

</manifest>