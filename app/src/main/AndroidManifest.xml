<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.android.softballstatkeeper">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- To auto-complete the email text field in the login form with statKeepUseruser's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:name="com.example.android.softballstatkeeper.MyApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_statkeep"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_statkeep_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:windowSoftInputMode="stateHidden|adjustResize">

        <activity
            android:name="com.example.android.softballstatkeeper.activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.example.android.softballstatkeeper.activities.LeagueManagerActivity"
            android:launchMode="singleTask"
            android:parentActivityName="com.example.android.softballstatkeeper.activities.MainActivity" />

        <activity
            android:name="com.example.android.softballstatkeeper.activities.LeagueGameActivity"
            android:launchMode="singleTask"
            android:parentActivityName="com.example.android.softballstatkeeper.activities.LeagueManagerActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.example.android.softballstatkeeper.activities.SetLineupActivity"
            android:label="Lineup Editor"
            android:screenOrientation="portrait"
            android:launchMode="singleTask" />

        <activity
            android:name="com.example.android.softballstatkeeper.activities.BoxScoreActivity"
            android:label="Box Score" />

        <activity
            android:name="com.example.android.softballstatkeeper.activities.TeamGameActivity"
            android:launchMode="singleTask"
            android:parentActivityName="com.example.android.softballstatkeeper.activities.TeamManagerActivity"
            android:screenOrientation="portrait" />

        <activity android:name="com.example.android.softballstatkeeper.activities.TeamPagerActivity"
            />

        <activity android:name="com.example.android.softballstatkeeper.activities.PlayerPagerActivity"
            android:launchMode="singleTask" />

        <activity
            android:name="com.example.android.softballstatkeeper.activities.TeamManagerActivity"
            android:launchMode="singleTask"
            android:parentActivityName="com.example.android.softballstatkeeper.activities.MainActivity" />

        <activity
            android:name="com.example.android.softballstatkeeper.activities.PlayerManagerActivity" />

        <activity
            android:name="com.example.android.softballstatkeeper.activities.UserSettingsActivity"
            android:screenOrientation="portrait" />

        <provider
            android:name="com.example.android.softballstatkeeper.data.StatsProvider"
            android:authorities="com.example.android.softballstatkeeper"
            android:exported="false" />

        <provider
            android:name="com.example.android.softballstatkeeper.data.MyFileProvider"
            android:authorities="com.example.android.softballstatkeeper.data.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/provider_paths" />
        </provider>

        <activity android:name="com.example.android.softballstatkeeper.activities.LoadingActivity"
            android:screenOrientation="portrait"
            />

        <activity android:name="com.example.android.softballstatkeeper.activities.ExportActivity" />

    </application>

</manifest>